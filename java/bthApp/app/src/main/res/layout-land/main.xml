<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:weightSum="3"
	android:background="#ffffff">

	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btnMainNews"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_margin="1dp"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:drawableLeft="@drawable/news_button"
			android:text="@string/news"
			android:drawablePadding="-100dp" />

		<Button
			android:id="@+id/btnMainCalendar"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_margin="1dp"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:drawableLeft="@drawable/calendar_button"
			android:text="@string/calendar"
			android:drawablePadding="-100dp" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/linearLayout3"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btnMainContacts"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_margin="1dp"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:drawableLeft="@drawable/contacts_button"
			android:text="@string/contacts"
			android:drawablePadding="-100dp" />

		<Button
			android:id="@+id/btnMainSchedules"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_margin="1dp"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:drawableLeft="@drawable/schedules_button"
			android:text="@string/schedules"
			android:drawablePadding="-100dp" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/linearLayout4"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btnMainMap"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_margin="1dp"
			android:layout_weight="1"
			android:background="@android:color/transparent"
			android:drawableLeft="@drawable/map_button"
			android:text="@string/map"
			android:drawablePadding="-100dp" />

		<Button
			android:id="@+id/btnBlank"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_margin="1dp"
			android:layout_weight="1"
			android:text="blank"
			android:visibility="invisible" />
	</LinearLayout>

</LinearLayout>